<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".Screens.TutorRegScreen">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signuptitle"
        android:text="   Tutor Personal Info"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#8f001a"
        android:layout_margin="25dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstname"
        android:layout_below="@id/signuptitle"
        android:background="#30ffffff"
        android:hint="First Name"
        android:textColorHint="#8f001a"
        android:textColor="#8f001a"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/outline_contextual_token_24"
        android:drawablePadding="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lastname"
        android:layout_below="@id/firstname"
        android:background="#30ffffff"
        android:hint="Last Name"
        android:textColorHint="#8f001a"
        android:textColor="#8f001a"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/outline_contextual_token_24"
        android:drawablePadding="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phonenumber"
        android:layout_below="@id/lastname"
        android:background="#30ffffff"
        android:hint="Phone Number"
        android:textColorHint="#8f001a"
        android:textColor="#8f001a"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/outline_contact_phone_24"
        android:drawablePadding="20dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/degree"
        android:layout_below="@id/phonenumber"
        android:background="#30ffffff"
        android:hint="Highest Degree Achieved"
        android:textColorHint="#8f001a"
        android:textColor="#8f001a"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/outline_account_balance_24"
        android:drawablePadding="20dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/courses"
        android:layout_below="@id/degree"
        android:background="#30ffffff"
        android:hint="Courses Offered (Separated by a Comma)"
        android:textColorHint="#8f001a"
        android:textColor="#8f001a"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/outline_account_balance_24"
        android:drawablePadding="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/continuebtn"
        android:text="CONTINUE TO SIGN UP"
        android:textSize="25dp"
        android:layout_below="@id/courses"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#8f001a"
        android:layout_margin="20dp"/>







</RelativeLayout>